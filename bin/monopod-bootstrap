#! /usr/bin/env node

const commander = require('commander');
const customHelp = require('./_/customHelp');
const bootstrap = require('../bootstrap');

const options = {};

const program = commander

  // Populate the `path`
  .arguments('[path]',
    'The path to your monorepo. Should contain a `packages` subdirectory.',
    '$(pwd)'
  )
  .action((path) => {
    options.path = path;
  })

  // Parse options
  .option('-s, --scope',
    'The npm scope of all packages in your monorepo.',
    '$(basename "$path")'
  )
  .option('-h, --help',
    'Youâ€™re looking at it.'
  )
  .parse(process.argv);

// Custom `--help`
customHelp({ program, binary: 'monopod-bootstrap' });

bootstrap(options);
