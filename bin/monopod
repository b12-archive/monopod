#! /usr/bin/env node

const commander = require('commander');
const customHelp = require('./_/customHelp');
const spawnSync = require('child_process').spawnSync;

const codify = string => `\`${string}\``;

const program = commander

  // Command
  .arguments('<command>',
    `Available commands: ${[
      'bootstrap',
      'debootstrap',
    ].map(codify).join(', ')}.`
  )
  .action((command) => {
    spawnSync(
      `${__dirname}/monopod-${command}`,
      process.argv.slice(3),
      { stdio: 'inherit' }
    );
    process.exit();
  })

  // Parse options
  .option('-h, --help',
    'Youâ€™re looking at it.'
  )
  .parse(process.argv);

// Custom `--help`
customHelp({ program, manpage: 'monopod' });
